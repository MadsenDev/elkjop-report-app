{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "elkjop-report-app",
  "version": "1.3.0",
  "identifier": "dev.madsens.elkjopreport",

  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Elkj√∏p Daily Report",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "devtools": true,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:;"
    }
  },

  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": { "wix": { "language": "en-US" } }
  }
}